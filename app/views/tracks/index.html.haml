- content_for :body do
  %body#track
%p#notice= notice
%h1 Listing Tracks
%table
  %thead
    %tr
      %th Name
      %th User
      %th Description
      %th Song
      %th{:colspan => "3"}
  %tbody
    - @tracks.each do |track|
      %tr
        %td= track.name
        %td= track.user_id
        %td= track.description
        %td= track.song
        %td= link_to 'Show', track
        %td= link_to 'Edit', edit_track_path(track)
        %td= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New Track', new_track_path