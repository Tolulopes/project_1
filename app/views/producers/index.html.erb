
<h1>#List Producers</h1>
<% if user_signed_in? %>
  <h3><%= link_to 'New producer', new_producer_path %></h3>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Text</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  

  <% @producers.each do |producer| %>
  <tr>
    <td><%= producer.name %></td>
    <td><%= producer.text %></td>
    <td><%= link_to 'Show', producer_path(producer) %></td>
    <td><%= link_to 'Edit', edit_producer_path(producer) %>
    </td>
    <td><%= link_to 'Destroy', producer_path(producer), method: :delete,
      data: { confirm: 'Are you sure' } %></td>
  </tr>
 <% end %>
</table>

